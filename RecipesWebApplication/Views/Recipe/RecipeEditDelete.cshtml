@model RecipesWebApplication.Models.RecipesVM

@using (Ajax.BeginForm("DeleteRecipes", new AjaxOptions() { OnSuccess = "hideRecipe" }))
{
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Recipe Image</th>
                <th>Recipe Name</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Recipes)
            {
                <tr id="@r.RecipeID">
                    <td><img src="@Url.Content(r.RecipeImage)" /></td>
                    <td>@r.RecipeName</td>
                    <td>@Html.ActionLink("Edit", "CreateRecipe","Recipe", new { recipeID = r.RecipeID }, new { @class = "btn btn-warning" })
                    <button type="submit" name="recipeID" value="@r.RecipeID" class="btn btn-danger">Delete</button></td>
                </tr>
                }
        </tbody>
    </table>
}

<script>
    function hideRecipe(recipeID) {
        $("#" + recipeID).remove();
    }
</script>